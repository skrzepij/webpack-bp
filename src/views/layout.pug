include ./mixins/meta

doctype html
html(lang="pl")
  head
    //-- DOCUMENT SETTINGS
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge;chrome=1")

    //- include variables section
    block vars
      - var title = ""
      - var pageTitle = ""
      - var pageDesc = ""
        
    //-- PAGE META
    //- defined in webpack.config.js
    title= htmlWebpackPlugin.options.title + ' - ' + title
    +meta("description", pageDesc)
    +meta("keywords", "")
    +meta("author", "UpCore - Radomir Skrzepij")
    +meta("publisher", "")
    +meta("copyright", "")
    +meta("company", "")
    +meta("page-topic", pageTitle)
    +meta("msapplication-tap-highlight", "no")
    
    
    //-- RESPONSIVE UTILITIES
    +meta("HandheldFriendly", "true")
    +meta("MobileOptimized", "320")
    +meta("viewport", "width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no")
      
    //-- FONTS
    
    
    <!--[if lt IE 9]>
      script(src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js")
      script(src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js")
    <![endif]-->
    
  body
    header
      block header
    
    
    main.main
      block content
    
    footer
      block footer
